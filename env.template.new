# ============================================================================
# Billy Walters Sports Analyzer - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# The .env file is gitignored and will never be committed
#
# Usage: All settings are loaded automatically via python-dotenv
# Priority: .env file > environment variables > defaults in config.py
# ============================================================================

# ============================================================================
# Core Bankroll Settings
# ============================================================================
BANKROLL=10000.0
KELLY_FRACTION=0.25
MAX_BET_PERCENTAGE=0.03
MINIMUM_EDGE_PERCENTAGE=5.5

# ============================================================================
# Weather APIs
# ============================================================================
# AccuWeather (recommended - more accurate)
# Get free key at: https://developer.accuweather.com/
ACCUWEATHER_API_KEY=your_accuweather_api_key_here

# OpenWeather (backup option)
# Get free key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# ============================================================================
# Betting Sites & Odds Providers
# ============================================================================
# Overtime.ag credentials
OV_CUSTOMER_ID=your_customer_id_here
OV_CUSTOMER_PASSWORD=your_password_here

# ============================================================================
# Research & News APIs (Optional)
# ============================================================================
NEWS_API_KEY=your_news_api_key_here
PROFOOTBALLDOC_API_KEY=your_profootballdoc_api_key_here
HIGHLIGHTLY_API_KEY=your_highlightly_api_key_here

# ============================================================================
# Caching Settings (Phase 1 - Optimize Performance)
# ============================================================================
CACHE_TTL_WEATHER=1800      # 30 minutes
CACHE_TTL_INJURY=900        # 15 minutes
CACHE_TTL_ANALYSIS=300      # 5 minutes
CACHE_TTL_ODDS=60           # 1 minute

# ============================================================================
# HTTP Client Settings (Phase 1 - Connection Pooling)
# ============================================================================
HTTP_MAX_CONNECTIONS=100
HTTP_MAX_PER_HOST=30
HTTP_TIMEOUT=30

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_WEB_FETCH=true
ENABLE_CACHING=true
ENABLE_RESEARCH=true
ENABLE_PROFOOTBALLDOC=false
ENABLE_NEWS_API=false

# ============================================================================
# Development Settings
# ============================================================================
DEBUG=false
VERBOSE=false
SIMULATION_MODE=false
LOG_LEVEL=INFO

# ============================================================================
# Billy Walters Parameters
# ============================================================================
HFA_NFL=2.5
HFA_CFB=3.5
MOMENTUM_WEIGHT=0.9
GAME_WEIGHT=0.1

# ============================================================================
# Scrapy Settings
# ============================================================================
SCRAPY_CONCURRENT_REQUESTS=2
SCRAPY_DOWNLOAD_TIMEOUT=60
SCRAPY_AUTOTHROTTLE=true
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSER=chromium

