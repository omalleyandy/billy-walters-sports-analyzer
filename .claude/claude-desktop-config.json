{
  "mcpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest",
        "--headless",
        "--isolated"
      ],
      "transport": "stdio",
      "disabled": false
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem"
      ],
      "transport": "stdio",
      "disabled": false,
      "metadata": {
        "allowedPaths": [
          "."
        ],
        "write": true
      }
    },
    "shell": {
      "command": "python",
      "args": [
        "-m",
        "mcp_server_shell",
        "--allow",
        "git,uv,pytest",
        "--cwd",
        "."
      ],
      "transport": "stdio",
      "disabled": false
    }
  }
}
