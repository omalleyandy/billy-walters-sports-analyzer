{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "env": {
    "PROJECT_ROOT": "C:\\Users\\omall\\Documents\\python_projects\\billy-walters-sports-analyzer",
    "PYTHONPATH": "C:\\Users\\omall\\Documents\\python_projects\\billy-walters-sports-analyzer\\src"
  },

  "includeCoAuthoredBy": true,

  "permissions": {
    "defaultMode": "acceptEdits",

    "allow": [
      // Core git introspection (safe, read-only-ish)
      "Bash(git status)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git remote:*)",
      "Bash(git tag:*)",
      "Bash(git stash:*)",
      "Bash(git fetch:*)",

      // Core git workflow helpers that are usually fine in this project
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",

      // uv / Python tooling
      "Bash(uv run python:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run ruff:*)",
      "Bash(uv run pyright:*)",
      "Bash(uv add:*)",
      "Bash(uv sync:*)",
      "Bash(uv remove:*)",
      "Bash(uv lock:*)",
      "Bash(uv pip:*)",
      "Bash(python:*)",

      // Basic shell utilities
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(tail:*)",
      "Bash(head:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(touch:*)",
      "Bash(echo:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(diff:*)",
      "Bash(tee:*)",

      // Slash commands & patterns specific to your project
      "SlashCommand(/collect-all-data)",
      "SlashCommand(/current-week)",
      "SlashCommand(/analyze-matchup)",
      "SlashCommand(/document-lesson)",
      "SlashCommand(/edge-detector)",
      "SlashCommand(/betting-card)",
      "SlashCommand(/scrape-overtime)",
      "SlashCommand(/scrape-x-news)",
      "SlashCommand(/pre-validate)",
      "SlashCommand(/post-validate)",
      "SlashCommand(/check-results)",
      "SlashCommand(/clv-tracker)",
      "SlashCommand(/security-review)",

      // Narrowed WebFetch allowance for ESPN only
      "WebFetch(domain:www.espn.com)",

      // Helpful Select-String patterns for your logs
      "Bash(Select-String -Pattern \"EDGE DETECTION|Total Edges|games from|BET HOME|BET AWAY|EDGE:\")",
      "Bash(Select-String -Pattern \"power|rating\")"
    ],

    "ask": [
      // Potentially dangerous or wider scope actions: ask first
      "Bash(git push:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",

      // GitHub CLI – powerful enough to always prompt
      "Bash(gh pr:*)",
      "Bash(gh run:*)",
      "Bash(gh issue:*)",
      "Bash(gh workflow:*)",
      "Bash(gh release:*)",
      "Bash(gh repo:*)",
      "Bash(gh api:*)",
      "Bash(gh auth:*)",
      "Bash(gh label:*)",
      "Bash(gh project:*)",

      // Node tooling – let it run, but ask first
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",

      // Any other WebFetch not explicitly whitelisted
      "WebFetch"
    ],

    "deny": [
      // Nuclear / foot-gun git commands
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fd:*)",

      // Classic unsafe shell primitives
      "Bash(rm -rf:*)",

      // Broad network exfil helpers – use WebFetch instead (and ask)
      "Bash(curl:*)",
      "Bash(wget:*)"
    ]
  },

  "model": "sonnet",
  "enableAllProjectMcpServers": true,

  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .claude/hooks/session_start.py",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .claude/hooks/session_end.py",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "/collect-all-data",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .claude/hooks/pre_data_collection_validator.py",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "/scrape-overtime",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .claude/hooks/pre_data_collection_validator.py",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "/scrape-x-news",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .claude/hooks/pre_data_collection_validator.py",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "/power-ratings",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .claude/hooks/pre_data_collection_validator.py",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "/update-data",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .claude/hooks/pre_data_collection_validator.py",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "SlashCommand(/edge-detector)",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .claude/hooks/pre_edge_detection.py",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "SlashCommand(/betting-card)",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .claude/hooks/pre_edge_detection.py",
            "timeout": 15
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "SlashCommand(/collect-all-data)",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .claude/hooks/post_data_collection_validator.py",
            "timeout": 60
          }
        ]
      },
      {
        "matcher": "SlashCommand(/scrape-overtime)",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .claude/hooks/auto_edge_detector.py",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "SlashCommand(/scrape-x-news)",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .claude/hooks/post_data_collection_validator.py --source x_news",
            "timeout": 30
          }
        ]
      }
    ]
  },

  "statusLine": {
    "type": "command",
    "command": "uv run python .claude/status_line.py"
  },

  "alwaysThinkingEnabled": true
}