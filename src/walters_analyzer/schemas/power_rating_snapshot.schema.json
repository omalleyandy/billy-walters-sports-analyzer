{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bwsa/schemas/power_rating_snapshot.schema.json",
  "title": "PowerRatingSnapshot",
  "type": "object",
  "properties": {
    "snapshot_id": { "type": "string" },
    "team_id": { "type": "string" },
    "season": { "type": "integer" },
    "week": { "type": "integer" },
    "old_rating": { "type": "number" },
    "true_game_performance": { "type": "number" },
    "new_rating": { "type": "number" },
    "score_differential": { "type": ["number", "null"] },
    "opponent_power_rating": { "type": ["number", "null"] },
    "injury_differential": { "type": ["number", "null"] },
    "home_field_advantage": { "type": ["number", "null"] },
    "source": { "type": ["string", "null"] },
    "created_at": { "type": "string", "format": "date-time" }
  },
  "required": [
    "snapshot_id",
    "team_id",
    "season",
    "week",
    "old_rating",
    "true_game_performance",
    "new_rating",
    "created_at"
  ],
  "additionalProperties": false
}