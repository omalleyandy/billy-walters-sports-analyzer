{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bwsa/schemas/game.schema.json",
  "title": "Game",
  "type": "object",
  "properties": {
    "game_id": { "type": "string" },
    "season": { "type": "integer" },
    "week": { "type": "integer" },
    "home_team_id": { "type": "string" },
    "away_team_id": { "type": "string" },
    "kickoff_datetime": {
      "type": "string",
      "format": "date-time"
    },
    "stadium": { "type": ["string", "null"] },
    "surface_type": { "type": ["string", "null"] },
    "timezone": { "type": ["string", "null"] }
  },
  "required": [
    "game_id",
    "season",
    "week",
    "home_team_id",
    "away_team_id",
    "kickoff_datetime"
  ],
  "additionalProperties": false
}