{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bwsa/schemas/bet_recommendation.schema.json",
  "title": "BetRecommendation",
  "type": "object",
  "properties": {
    "recommendation_id": { "type": "string" },
    "game_id": { "type": "string" },
    "evaluation_id": { "type": "string" },

    "bet_type": {
      "type": "string",
      "enum": ["spread", "moneyline", "total", "none"]
    },
    "side": {
      "type": "string",
      "enum": ["home", "away", "over", "under", "none"]
    },

    "line": { "type": ["number", "null"] },
    "price": { "type": ["integer", "null"] },

    "edge_percentage": { "type": "number" },
    "star_rating": { "type": "number" },

    "stake_fraction": {
      "type": "number",
      "minimum": 0,
      "maximum": 0.03
    },

    "bankroll": { "type": ["number", "null"] },
    "is_play": { "type": "boolean" },
    "rationale": { "type": "string" }
  },
  "required": [
    "recommendation_id",
    "game_id",
    "evaluation_id",
    "bet_type",
    "side",
    "edge_percentage",
    "star_rating",
    "stake_fraction",
    "is_play",
    "rationale"
  ],
  "additionalProperties": false
}